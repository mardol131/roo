{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "NEXT_PUBLIC_CMS_URL",
        "NEXT_PUBLIC_WEBSITE",
        "NEXT_PUBLIC_CDN_STORAGE_URL",
        "NEXT_PUBLIC_CDN_URL",

        "DATABASE_URI",
        "PAYLOAD_SECRET",
        "CDN_STORAGE_URL",
        "CDN_STORAGE_ZONE",
        "CDN_API_STORAGE_SECRET"
      ]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
