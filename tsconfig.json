{
  "compilerOptions": {
    "types": ["react", "react-dom"],
    "baseUrl": ".",
    "paths": {
      "@roo/shared": ["shared/src"],
      "@roo/shared/*": ["shared/src/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "strict": true
  },
  "files": [],
  "references": [
    { "path": "./shared" },
    { "path": "./cms" },
    { "path": "./app" }
  ]
}
